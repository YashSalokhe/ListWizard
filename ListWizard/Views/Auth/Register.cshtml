@model ListWizard.Models.AuthClass.Register;
@{
    ViewData["Title"] = "Register";
}

<h1>Register</h1>
<div class="align-content-md-center">
    <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                
                <div class="form-floating">
                    <input asp-for="@Model.UserName" class="form-control" autocomplete="current-password" aria-required="true" />
                    <label asp-for="@Model.UserName" class="form-label"></label>
                    <span asp-validation-for="@Model.UserName" class="text-danger"></span>
                </div>
          
                <div class="form-floating">
                    <input asp-for="@Model.Email" class="form-control" autocomplete="username" aria-required="true" />
                    <label asp-for="@Model.Email" class="form-label"></label>
                    <span asp-validation-for="@Model.Email" class="text-danger"></span>
                </div>

                 <div class="form-floating">
                    <input asp-for="@Model.PhoneNumber" class="form-control" autocomplete="current-password" aria-required="true" />
                    <label asp-for="@Model.PhoneNumber" class="form-label"></label>
                    <span asp-validation-for="@Model.PhoneNumber" class="text-danger"></span>
                </div>

                                <div class="form-floating">
                    <input asp-for="@Model.CompanyName" class="form-control" autocomplete="current-password" aria-required="true" />
                    <label asp-for="@Model.CompanyName" class="form-label"></label>
                    <span asp-validation-for="@Model.CompanyName" class="text-danger"></span>
                </div>

                                <div class="form-floating">
                    <input asp-for="@Model.Password" type="password" class="form-control" autocomplete="current-password" aria-required="true" />
                    <label asp-for="@Model.Password" class="form-label"></label>
                    <span asp-validation-for="@Model.Password" class="text-danger"></span>
                </div>
                <div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Log in</button>
                </div>
    </form>
</div>